<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.jboss.org/dtd/hibernate/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/jeet</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.username">jatin</property>
		<property name="hibernate.connection.password">6432</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<!--  <property name="hibernate.hbm2ddl.auto">create-drop</property>  --> 
		<mapping class="com.jeet.api.Movie" />
		<mapping class="com.jeet.api.Ticket" />
		<mapping class="com.jeet.api.Seat" />
		<mapping class="com.jeet.api.Screen" />
	</session-factory>
</hibernate-configuration>